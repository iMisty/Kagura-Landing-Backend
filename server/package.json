{
  "name": "search-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "s": "nodemon ./src/server.ts",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc && node dist/server.js",
    "watch": "npm run tslint && npm run watch-ts",
    "watch-ts": "tsc node dist/server.js -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-server": "nodemon --watch src/**/* -e ts,tsx --exec ts-node ./src/server.ts"
  },
  "author": "Miya",
  "license": "MIT",
  "dependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.14",
    "koa": "^2.13.0",
    "koa-router": "^9.1.0",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.21",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  }
}
